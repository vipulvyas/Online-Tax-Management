@{
    ViewBag.Title = "Forgot Password";
}
<br/>
<center>
    <h2>Forgot Password</h2></center>

        @using (Html.BeginForm())
        {
            <center>
                <fieldset style="margin:2% 25%;background-color:darkgrey;border:5px solid black;border-radius:10px">
                    <br/>
                    <div class="form-horizontal">

                        <div  style="color:yellow;font-size:15px;">
                            @ViewBag.Message
                        </div>
                        <div class="form-group">
                            <label class="control-label " ><h3>Email ID</h3></label>
                            @Html.TextBox("EmailID", "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Submit" class="btn btn-dark" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </center>
        }

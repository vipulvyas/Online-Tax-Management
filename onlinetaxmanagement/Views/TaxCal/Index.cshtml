
@{
    ViewBag.Title = "Tax Calculator";
}
<script type="text/javascript">
    function myFunction1() {
        var taxpayer = $('#taxpayer').find(":selected").text();
        $('#tptext').val(taxpayer);
    }
    function myFunction2() {
        var status = $('#status').find(":selected").text();
        $('#statustext').val(status);
    }
</script>

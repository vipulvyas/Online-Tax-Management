
@if (ViewBag.temp == null && Session["Uid"] != null)
{
    <div style="background-color:yellow;padding:1%">
        <center><h3><a href="~/GSTNumbers/Apply">Apply For GST Number</a></h3></center>
    </div>
}
else
{

    if (Session["message1"] != null)
    {
        ViewBag.mes = Session["message1"].ToString();
        <div style="background-color:yellow;padding:1%">
            <center><h3>@ViewBag.mes</h3></center>
        </div>

        Session["message1"] = null;
    }
}


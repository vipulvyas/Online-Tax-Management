
@{
    ViewBag.Title = "EnterGST";
}


@using (Html.BeginForm("EnterGST", "GSTINformations", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<center>
    <fieldset style="margin:2% 25%;background-color:darkgrey;border:5px solid black;border-radius:10px">
        @if (ViewBag.Message != null)
        {
            <div class=" alert alert-danger alert-dismissible">

                <button type="button" class="close" data-dismiss="alert">&times;</button>

                @ViewBag.Message

            </div>
        }
        <h4><center style="margin:2% 0%;"> Enter GST Number</center></h4>
        <br>
        @Html.TextBox("GSTNumber", "", new { type = "text", Style = "border:2px solid ;border-radius:5px" })
        <br>
        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-dark" value="Submit" />
            </div>
        </div>
    </fieldset>
    </center>
}

